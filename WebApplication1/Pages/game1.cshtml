            <div id="gameArea3" style="display:none;">
                <button id="shapeBTN1" type="button"  onclick="shapePressed(0)">
                    <img src ="~/images/cirkel.png" />
                </button>
            <button id="shapeBTN2" type="button" onclick="shapePressed(1)">
                    <img src ="~/images/vierkant.png" />
                </button>
            <button id="shapeBTN3" type="button" onclick="shapePressed(2)">
                    <img src ="~/images/driehoek.png" />
                </button>
            <button id="shapeBTN4" type="button" onclick="shapePressed(3)">
                    <img src ="~/images/Letter M.png" />
                </button>

                <button id="TurnLightOnBTN" onclick="turnOnLights()">

                </button>

                <canvas id="exampleLight1"></canvas>

                <canvas id="exampleLight2"></canvas>
            </div>
        <div id="gameArea4">
            <button id="arrowLeft" onclick="goToPreviousQuestion()">
                <img src="~/images/Pijl.png" />
            </button>

            <!-- VRAAG 1 -->
            <div id="question1">
                <h1>Vraag 1</h1>
                <p class="questionText">Welk antwoord moet ingevuld worden in plaats van de ? om 10 als antwoord te krijgen</p>
                <div class="codeWrapper">
                    <pre><code>
function addNumbers(a, b) {
    return a + b;
}
let number = addNumbers(?)
console.log(number);
            </code></pre>
                </div>
                <div class="questionButtons">
                    <button>4, 3</button>
                    <button>5 5</button>
                    <button>2, 8</button>
                </div>
            </div>

            <!-- VRAAG 2 -->
            <div id="question2" style="display:none;">
                <h1>Vraag 2</h1>
                <p class="questionText">Hoe vaak wordt hallo geprint?</p>
                <div class="codeWrapper">
                    <pre><code>
const lijstMetWoorden = ["huisje", "boompje", "beestje"];

function LoopDoorLijst(lijst) {
    for (let i = 0; i < lijst.Count; i++) {
        console.log("hallo");
    }
}
LoopDoorLijst(lijstMetWoorden);
            </code></pre>
                </div>
                <div class="questionButtons">
                    <button>3</button>
                    <button>2</button>
                    <button>4</button>
                </div>
            </div>

            <!-- VRAAG 3 -->
            <div id="question3" style="display:none;">
                <h1>Vraag 3</h1>
                <p class="questionText">Welke waardes zorgen dat de if-statement uitgevoerd wordt?</p>
                <div class="codeWrapper">
                    <pre><code>
function CheckNumbers(a, b) {
    if (a > b) {
        console.log("juiste antwoord");
    }
}
CheckNumbers(?);
            </code></pre>
                </div>
                <div class="questionButtons">
                    <button>2, 2</button>
                    <button>7, 4</button>
                    <button>6 3</button>
                </div>
                <button onclick="checkAwnsers()">Controleer Antwoorden</button>
            </div>

            <button id="arrowRight" onclick="goToNextQuestion()">
                <img src="~/images/Pijl.png" />
            </button>
        </div>

