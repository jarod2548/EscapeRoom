@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <div class="container">
        <h1>Welcome to the Game</h1>
        
        <!-- Button to Start the Game -->
        <button id="startButton" class="btn btn-primary" onclick="startGame()">Start Game</button>

        <!-- Game Screen that will be shown/hidden -->
        <div id="gameScreen" style="display:none;">
            <h2>The Game is On!</h2>
            <p>Use the arrow keys to move the object!</p>

            <!-- Game Area -->
            <div id="gameArea">
                <!-- Movable Object -->
                <div id="movableObject"></div>
                <div id="moveableObstacle"></div>
            </div>
            <div id ="liveContainer">
                @for (int i = 0; i < Model.PlayerLives; i++)
                {
                    <img src="~/images/heart.png" alt="Life" class="life" />
                }
            </div>
            
        </div>

        <!-- Instructions -->
        <p>Click the "Start Game" button to reveal the game screen and start interacting.</p>
    </div>

    <script src="~/js/game.js"></script>
</body>
</html>
