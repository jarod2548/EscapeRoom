@page
@model WebApplication1.Pages.Index1Model
@{
    ViewData["Title"] = "Game 2";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/game2.css" />
</head>
<body>
    <div class="container">
        <h1>Lampjes spel</h1>

        <button id="player1Button" class="startButton" onclick="player1Start()">Start als speler 1</button>
        <button id="player2Button" class="startButton" onclick="player2Start()">Start als speler 2</button>

        <!-- Game Screen that will be shown/hidden -->
        <div id="gameScreen" style="display:none;">

            <!-- Game Area -->
            <div id="gameArea">
                <img src="~/images/lamp.png" id="light1" class="grid-item"></img>
                <img src="~/images/cirkel.png" id="shape1" class="grid-item"></img>

                <img src="~/images/lamp.png" id="light2" class="grid-item"></img>
                <img src="~/images/driehoek.png" id="shape2" class="grid-item"></img>

                <img src="~/images/lamp.png" id="light3" class="grid-item"></img>
                <img src="~/images/vierkant.png" id="shape3" class="grid-item"></img>

                <img src="~/images/lamp.png" id="light4" class="grid-item"></img>
                <img src="~/images/cirkel.png" id="shape4" class="grid-item"></img>

                <img src="~/images/lamp.png" id="light5" class="grid-item"></img>
                <img src="~/images/Letter M.png" id="shape5" class="grid-item"></img>

                <img src="~/images/lamp.png" id="light6" class="grid-item"></img>
                <img src="~/images/vierkant.png" id="shape6" class="grid-item"></img>

                <img src="~/images/lamp.png" id="light7" class="grid-item"></img>
                <img src="~/images/Letter M.png" id="shape7" class="grid-item"></img>

                <img src="~/images/lamp.png" id="light8" class="grid-item"></img>
                <img src="~/images/driehoek.png" id="shape8" class="grid-item"></img>

                <img src="~/images/lamp.png" id="light9" class="grid-item"></img>
                <img src="~/images/Letter M.png" id="shape9" class="grid-item"></img>

                <img src="~/images/lamp.png" id="light10" class="grid-item"></img>
                <img src="~/images/vierkant.png" id="shape10" class="grid-item"></img>

            </div>
            <div id ="liveContainer">
                @for (int i = 0; i < 3; i++)
                {
                        <img src="~/images/heart.png" alt="Life" class="life" />
                }
            </div>

        </div>

        <div class="image-container">
  <div class="quadrant top-left"></div>
  <div class="quadrant top-right"></div>
  <div class="quadrant bottom-left"></div>
  <div class="quadrant bottom-right"></div>
  <img src="~/images/lamp.png" alt="Image" class="image" />
</div>

<button onclick="randomizeColors()">Randomize Colors</button>

        <!-- Instructions -->
        <p>Click the "Start Game" button to reveal the game screen and start interacting.</p>
    </div>

    <script src="~/js/game2.js"></script>
</body>
</html>
